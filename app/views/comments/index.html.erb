<div class="row">
  <div class="col-md-12">
    <%= link_to "New Comment", new_comment_path %>
  </div>
</div>
<%= @comments.each do |comment| %>
  <div class="row">
    <div class="col-md-12">
      <h1><%= link_to comment.author, comment %></h1>
      <small><%= comment.author %></small>
      <small><%= comment.created_at.to_s(:short) %></small>
      <div class="row">
        <div class="col-md-12">
          <p><%= comment.content %></p>
        </div>
      </div>
    </div>
  </div>
<% end %>
