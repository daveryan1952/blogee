 <div class="col-md-12">
    <div id="author">
      <h1><%= @comment.author %></h1>
      <%= link_to "Edit Comment", edit_comment_path(@comment) %>
      <%= link_to "Delete Comment", @comment, method: :delete %>
      <%= link_to "Example comment", new_post_comment_path(@post) %>
    </div>
    <div id="author">
      <p>By: <%= @comment.author %></p>
      <p><%= @comment.created_at.to_s(:short) %></p>
    </div>
    <div id="content">
      <p><%= @comment.content %></p>
      <p><%= link_to "Add Comment", new_post_comment_path(@post) %>
    </div>
  </div>
</div>
